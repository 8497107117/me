{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.common.js"
      }
    }
  },
  "rules": {
    "react/destructuring-assignment": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/no-danger": 0,
    "arrow-parens": 0,
    "brace-style": [
      2,
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "comma-dangle": 0,
    "function-paren-newline": 0,
    "no-confusing-arrow": 0,
    "no-console": [
      "error",
      {
        "allow": [
          "error"
        ]
      }
    ],
    "no-else-return": [
      "error",
      {
        "allowElseIf": true
      }
    ],
    "no-return-await": 0,
    "operator-linebreak": [
      "error",
      "after"
    ]
  },
  "env": {
    "browser": true,
    "node": true
  }
}